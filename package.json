{
  "name": "inazuma",
  "version": "0.0.1",
  "main": "dist/browser/main.js",
  "author": "Iwata Hidetaka",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist out node_modules/.cache src/react/tailwind.css src/rust-backend/native/target",
    "format": "prettier --write \"src/{react,browser}/**/*.{ts,tsx,js}\"",
    "lint": "eslint src/{react,browser}/**/*.{ts,tsx}",
    "typecheck:react": "tsc -p src/react/tsconfig.json --noEmit",
    "build:neon": "electron-build-env neon build inazuma-rust-backend --release",
    "build:browser": "tsc -p src/browser/tsconfig.json",
    "build:tailwind": "tailwindcss -i ./src/react/index.css -o ./src/react/tailwind.css",
    "build:react": "cross-env NODE_OPTIONS=\"--max_old_space_size=4096\" vite build",
    "build:renderer": "run-s build:tailwind typecheck:react build:react",
    "build": "run-s build:neon build:browser build:renderer",
    "watch:browser": "tsc -p src/browser/tsconfig.json -w",
    "watch:react": "vite",
    "watch:renderer": "npm-run-all -p \"build:tailwind -w\" \"typecheck:react -w\" watch:react",
    "package": "electron-builder",
    "all": "run-s clean format lint build:neon build:browser build:renderer package",
    "start": "cross-env NODE_ENV=\"development\" electron .",
    "start:prod": "electron ."
  },
  "dependencies": {
    "@iconify/react": "^3.0.1",
    "@material-ui/core": "^4.11.4",
    "@reduxjs/toolkit": "^1.6.2",
    "chardet": "^1.3.0",
    "classnames": "^2.3.1",
    "command-line-args": "^5.1.1",
    "electron-devtools-installer": "^3.1.1",
    "fs-extra": "^9.0.1",
    "iconv-lite": "^0.6.2",
    "inazuma-rust-backend": "link:./src/rust-backend",
    "jsonschema": "^1.4.0",
    "lodash": "^4.17.20",
    "neon-cli": "^0.9.1",
    "node-pty": "^0.10.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.5",
    "react-transition-group": "^4.4.2",
    "react-virtualized-auto-sizer": "^1.0.6",
    "react-window": "^1.8.6",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.7",
    "@babel/plugin-syntax-jsx": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/runtime": "^7.12.5",
    "@types/chardet": "^0.8.0",
    "@types/command-line-args": "^5.0.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/fs-extra": "^9.0.4",
    "@types/lodash": "^4.14.165",
    "@types/node": "^12.12.2",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/react-redux": "^7.1.19",
    "@types/react-virtualized-auto-sizer": "^1.0.1",
    "@types/react-window": "^1.8.5",
    "@types/rimraf": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vitejs/plugin-react-refresh": "^1.3.3",
    "chokidar": "3.4.3",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "dayjs": "^1.9.6",
    "electron": "^15.3.0",
    "electron-build-env": "^0.2.0",
    "electron-builder": "^22.9.1",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-jsx": "^10.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-standard": "^5.0.0",
    "fibers": "^5.0.0",
    "glob": "^7.1.6",
    "monaco-editor": "^0.21.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.8",
    "prettier": "^2.2.0",
    "tailwindcss": "^2.2.16",
    "typescript": "^4.1.2",
    "upath": "^2.0.1",
    "vite": "^2.3.8",
    "vite-react-jsx": "^1.1.2",
    "xterm": "^4.3.0",
    "xterm-addon-fit": "^0.4.0"
  }
}
