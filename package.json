{
  "name": "inazuma",
  "version": "0.0.2",
  "main": "dist/browser/main.js",
  "author": "Iwata Hidetaka",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf node_modules/.cache dist/* src/react/generated/* src-tauri/target",
    "prebuild:mkdir": "node build/mkdir.js dist src/react/generated",
    "prebuild:iconbundle": "node build/create-iconbundle.js",
    "generate-dts:rust2json": "cargo run --manifest-path src-tauri/Cargo.toml --example generate_schema -- src/react/generated/tauri-types.json",
    "generate-dts:json2dts": "json2ts src/react/generated/tauri-types.json -o src/react/generated/tauri-types.d.ts",
    "generate-dts": "run-s prebuild:mkdir generate-dts:rust2json generate-dts:json2dts",
    "format": "prettier --write \"src/react/**/*.{ts,tsx,js}\"",
    "lint": "eslint src/react/**/*.{ts,tsx}",
    "typecheck": "tsc -p src/react/tsconfig.json --noEmit",
    "build:tailwind": "tailwindcss -i ./src/react/index.css -o ./src/react/generated/tailwind.css",
    "build:ts": "cross-env NODE_OPTIONS=\"--max_old_space_size=4096\" vite build",
    "build:frontend": "run-s prebuild:* generate-dts typecheck build:tailwind build:ts",
    "build:tauri": "tauri build",
    "build": "run-s build:frontend build:tauri",
    "watch:ts": "vite",
    "watch:frontend": "run-p \"build:tailwind -w\" \"typecheck -w\" watch:ts",
    "watch:tauri": "tauri dev",
    "watch": "run-p watch:frontend dev:tauri",
    "all": "run-s clean format lint build"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.0.0-rc.3",
    "buffer": "^6.0.3",
    "chardet": "^1.3.0",
    "classnames": "^2.3.1",
    "command-line-args": "^5.1.1",
    "dayjs": "^1.9.6",
    "iconv-lite": "^0.6.2",
    "lodash": "^4.17.20",
    "monaco-editor": "^0.30.1",
    "preact": "^10.6.2",
    "react-redux": "^7.2.5",
    "react-transition-group": "^4.4.2",
    "react-virtualized-auto-sizer": "^1.0.6",
    "react-window": "^1.8.6",
    "string_decoder": "^1.3.0",
    "xterm": "^4.3.0",
    "xterm-addon-fit": "^0.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.7",
    "@babel/plugin-syntax-jsx": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/runtime": "^7.12.5",
    "@emotion/react": "^11.7.0",
    "@emotion/styled": "^11.6.0",
    "@iconify/json": "^1.1.424",
    "@iconify/json-tools": "^1.0.10",
    "@iconify/react": "^3.0.1",
    "@mui/material": "^5.2.2",
    "@mui/styles": "^5.2.2",
    "@prefresh/vite": "^2.2.4",
    "@reduxjs/toolkit": "^1.6.2",
    "@tauri-apps/cli": "^1.0.0-rc.8",
    "@types/chardet": "^0.8.0",
    "@types/fs-extra": "^9.0.4",
    "@types/lodash": "^4.14.165",
    "@types/node": "^16.11.10",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/react-redux": "^7.1.19",
    "@types/react-virtualized-auto-sizer": "^1.0.1",
    "@types/react-window": "^1.8.5",
    "@types/rimraf": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vitejs/plugin-react-refresh": "^1.3.3",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-jsx": "^10.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-standard": "^5.0.0",
    "fibers": "^5.0.0",
    "glob": "^7.1.6",
    "handlebars": "^4.7.7",
    "json-schema-to-typescript": "^10.1.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.8",
    "prettier": "^2.2.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.2.16",
    "typescript": "^4.1.2",
    "upath": "^2.0.1",
    "vite": "^2.3.8",
    "vite-react-jsx": "^1.1.2"
  }
}
