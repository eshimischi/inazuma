main-layout(:title="repoName")
    template(slot="titlebar-buttons")
        text-field(inputId="search", label="input search pattern")
        icon-button(for="search") search
        icon-button(@click.native="reload") refresh

    template(slot="drawer-navigations")
        navigation-link(text="Branches", icon="local_offer", @click.native="$store.dispatch('showSidebar', 'branches')")
        navigation-link(text="Remotes", icon="cloud", @click.native="$store.dispatch('showSidebar', 'remotes')")
        navigation-router-link(name="root", text="Back to Home", icon="home")
        navigation-router-link(name="log/preference", text="Preference", icon="settings", :replace="false")
        div.mdl-layout-spacer
        navigation-router-link(name="root", text="Version", icon="info_outline")

    div.main-content
        keep-alive
            transition(name="sidebar")
                component(:is="sidebar")
        splitter-panel(id="main-splitter-panel", direction="horizontal", :splitter-width="5", :initial-ratio="0.6")
            log-view(slot="first")
            detail-panel(slot="second")

    router-view(slot="overlay")


