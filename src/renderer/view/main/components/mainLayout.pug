doctype html
div.main-container.mdc-theme--dark.mdc-typography
    header.mdc-toolbar(data-mdc-auto-init="MDCToolbar")
        div.mdc-toolbar__row
            section.mdc-toolbar__section.mdc-toolbar__section--align-start
                toolbar-button.mdc-toolbar__icon--menu(@click.native.left="openDrawer") menu
                span.mdc-toolbar__title.mdc-typography--headline(id="main-title") {{ title }}

            section.mdc-toolbar__section.mdc-toolbar__section--align-end
                slot(name="titlebar-buttons")

    aside.mdc-temporary-drawer(ref="drawer", data-mdc-auto-init="MDCTemporaryDrawer")
        nav.mdc-temporary-drawer__drawer.custom-drawer
            nav.mdc-temporary-drawer__content.mdc-list(@click.capture="closeDrawer")
                slot(name="drawer-navigations")
    main
        slot

    slot(name="overlay")
    dialog-base(:state="$store.state.dialog",
                :actions="$store.actions.dialog")

