{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": ".temp",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxFactory": "VueTsxSupport"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue",
    "../ipc-promise.d.ts",
    "../commonTypes.d.ts"
  ],
  "exclude": ["node_modules"]
}
