{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": ".temp",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxFactory": "VueTsxSupport"
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.vue", "../commonTypes.d.ts"],
  "exclude": ["node_modules"]
}
