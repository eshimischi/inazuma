{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "outDir": ".temp",
    "noImplicitAny": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve"
  },
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx",
    "../commonTypes.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
