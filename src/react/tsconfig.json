{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"],
      "@backend/*": ["../../src-tauri/types/bindings/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "../../src-tauri/types/bindings/*.ts", "../../package.json"],
  "exclude": ["node_modules"]
}
